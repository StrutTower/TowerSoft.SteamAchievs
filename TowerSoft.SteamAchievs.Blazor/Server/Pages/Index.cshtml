@page "/"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <title>SteamAchievs</title>
    <base href="@HttpContext.Request.PathBase/" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="darkreader" content="dark-mode-supported-natively">
    <link rel="icon" type="image/png" href="favicon.png" />
    <link href="lib/bundle.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="_content/Blzr.BootstrapSelect/blzr-bootstrap-select.min.css" rel="stylesheet" />
</head>

<body>
    <div id="app">
        <div class="text-center">
            <div>
                <span class="mdi mdi-4x mdi-loading mdi-spin-fast"></span>
            </div>
            <h2>Initalizing...</h2>
        </div>
    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <script>
        window.getSelectedValues = function (sel) {
            var results = [];
            var i;
            for (i = 0; i < sel.options.length; i++) {
                if (sel.options[i].selected) {
                    results[results.length] = sel.options[i].value;
                }
            }
            return results;
        };

        window.clearMultiSelect = function (element) {
            var options = element.querySelectorAll('option');

            for (var i = 0; i < options.length; i++) {
                options[i].selected = false;
            }
        }

        window.replaceState = function (url) {
            window.history.replaceState(null, '', url);
        }

        window.getScrollDistance = function () {
            return document.documentElement.scrollTop || document.body.scrollTop;
        }

        window.setScrollDistance = function (scrollDistance) {
            // Small delay seems to be required, might be an issue with Virtualize
            setTimeout(function () {
                window.scrollTo({
                    top: scrollDistance,
                    left: 0,
                    behavior: 'instant'
                });
            }, 50);
        }
    </script>
    <script src="_framework/blazor.webassembly.js"></script>
</body>
</html>
