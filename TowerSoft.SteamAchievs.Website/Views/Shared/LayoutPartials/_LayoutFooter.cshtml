<footer class="container">
    <hr />
    <p class="text-center">
        <environment include="Development">
            <span class="text-danger font-weight-bold">Development Server</span> -
        </environment>
        <a href="@AppSettings.Value.CompanyHomepageUrl" target="_blank" rel="noopener noreferrer" display-for="@AppSettings.Value.CompanyName"></a>
        @AppSettings.Value.AppName
        &copy; @DateTime.Now.Year
    </p>
    <div class="hidden">@Html.AntiForgeryToken()</div>
</footer>

<environment include="Development">
    <script src="~/lib/lib.js" asp-append-version="true"></script>
    <script asp-src-include="~/js/*" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/bundle.min.js" asp-append-version="true"></script>
</environment>